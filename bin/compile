# YAJL
echo "-----> Installing yajl"
cd /tmp
curl https://codeload.github.com/lloyd/yajl/legacy.tar.gz/2.1.0 -s -o yajl-2.1.0.tar.gz
tar -xf yajl-2.1.0.tar.gz
ls -alh
cd lloyd-yajl-66cb08c
./configure -p $BUILD_PATH && make && make install

